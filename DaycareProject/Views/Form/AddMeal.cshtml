@model DaycareProject.ViewModels.AddMealViewModel

<h2>Add Meal</h2>

<form asp-controller="Form" asp-action="AddMeal" method="post">
    <div class="form-group">
        <label asp-for="MealTimeID">Meal Time</label>
        <select asp-for="MealTimeID" asp-items="@Model.MealTimes"></select>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="FoodAmountID">How much did they eat?</label>
        <select asp-for="FoodAmountID" asp-items="@Model.FoodAmounts"></select>
    </div>



    <input type="hidden" name="StudentID" value="@Model.StudentID" />

    <input type="submit" value="Add Meal" />
</form>
